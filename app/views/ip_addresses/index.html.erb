<p id="notice"><%= notice %></p>

<h1>Listing Ip Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Mac address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ip_addresses.each do |ip_address| %>
      <tr>
        <td><%= ip_address.address %></td>
        <td><%= ip_address.mac_address %></td>
        <td><%= link_to 'Show', ip_address %></td>
        <td><%= link_to 'Edit', edit_ip_address_path(ip_address) %></td>
        <td><%= link_to 'Destroy', ip_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

